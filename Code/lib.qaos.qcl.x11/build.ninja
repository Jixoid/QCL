include ../../rules.ninja


# Target
build Build: phony $Out/Base.moqs

Incs = -I$DEV/lib.qaos.basis.dev/Inc -I$DEV/lib.qaos.jconf.dev/Inc -I$DEV/lib.qaos.qcl.dev/Inc -I$DEV/lib.qaos.qcl.qstd.dev/Inc


# Pack
build $Out/Base.moqs: TR $Out/Base.moq $Out/Base.sig
  dir = $Out
  files = Base.moq Base.sig


build $Out/Base.sig: SG $Out/Base.moq
  file = $Out/Base.moq


build $Out/Base.moq: MQ Package.conf $Lib


# Files
build $Lib: phony $Lib/libQCL_x11.a $Lib/libQCL_x11.so

build $Lib/libQCL_x11.a:  AR $Tmp/Platform_X11.o
build $Lib/libQCL_x11.so: CX $Tmp/Platform_X11.o
  opt = -shared


build $Tmp/Platform_X11.o: CX Dev/Platform_X11.cc
  opt = -c
  inc = $Incs

