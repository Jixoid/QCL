include ../../rules.ninja


# Target
build Build: phony $Out/Base.moqs

Incs = -I$DEV/lib.qaos.basis.dev/Inc -I$DEV/lib.qaos.jconf.dev/Inc -I$DEV/lib.qaos.qcl.dev/Inc -I$DEV/lib.qaos.qcl.qstd.dev/Inc
Links = $COD/lib.qaos.qcl/$Lib/libQCL.a $COD/lib.qaos.qcl.qstd/$Lib/libQCL_qstd.a $COD/lib.qaos.qcl.x11/$Lib/libQCL_x11.a $COD/lib.qaos.jconf/$Lib/libJConf.a -lcairo -lX11


# Pack
build $Out/Base.moqs: TR $Out/Base.moq $Out/Base.sig
  dir = $Out
  files = Base.moq Base.sig


build $Out/Base.sig: SG $Out/Base.moq
  file = $Out/Base.moq


build $Out/Base.moq: MQ Package.conf $Bin


# Files
build $Bin: phony $Bin/Main.elf

build $Bin/Main.elf: CX $Tmp/Main.o
  links = $Links


build $Tmp/Main.o: CX Dev/Main.cc
  opt = -c
  inc = $Incs

